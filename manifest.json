{
  "manifest_version": 2,
  "name": "Ezra",
  "description": "自動經文顯示",
  "version": "1.8",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/tether.js",
        "src/drop.js",
        "src/ezra.js",
        "chromeExt/contentScript.js"
      ],
      "css": [
        "ezra-style.css"
      ],
      "all_frames": true
    }
  ],
  "background": {
    "scripts": [
      "chromeExt/eventPage.js"
    ],
    "persistent": false
  },
  "commands": {
    "copy-verse": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "Command+Shift+C"
      },
      "description": "查詢及複製經文"
    }
  },
  "icons": {
    "128": "images/icon.png"
  },
  "permissions": [
    "activeTab",
    "http://bible.fhl.net/json",
    "contextMenus",
    "clipboardWrite"
  ]
}